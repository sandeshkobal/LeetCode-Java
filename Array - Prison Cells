/*
https://leetcode.com/problems/prison-cells-after-n-days/
here as you can see net iteration last and first elements could be one dont let that proogate to the next array.
*/
class Solution {
     public int[] prisonAfterNDays(int[] cells, int N) {
        int[] firstSimulation = new int[8];
        for (int i=1; i<7; i++)     // we run one cycle to get rid of extra one at the end in the cells 
            firstSimulation[i] = (cells[i-1] == cells[i+1] ? 1 : 0);
        cells = firstSimulation.clone();
        N -= 1;
        int cycle = 1; // cycle is one so  N %= cycle; wont result into divid by 0 error
        while (N-- > 0) {
            int[] nextSimulation = new int[8];
            for (int i=1; i<7; i++) 
                nextSimulation[i] = (cells[i-1] == cells[i+1] ? 1 : 0);
            if (Arrays.equals(firstSimulation, nextSimulation)) 
                N %= cycle;
            cells = nextSimulation.clone();
            cycle++;
        }
        return cells;
    }
}
