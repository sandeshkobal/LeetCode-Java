https://leetcode.com/problems/permutations/submissions/
public List<List<Integer>> permute(int[] nums) {
        List<List<Integer>>  ans = new ArrayList<List<Integer>>();
        if(nums.length == 0)
            return ans;
        int[] count = new int[nums.length];
        List<Integer> perm = new ArrayList<Integer>();
        permute(nums,count,ans,perm); 
        return ans;
    }
    
    private void permute(int[] nums,int[] count, List<List<Integer>> ans, List<Integer> perm){
        if(perm.size()==nums.length){
            // System.out.println(Arrays.toString(perm.toArray()));
            ans.add(new ArrayList<Integer>(perm));
        }
        for(int i=0;i<nums.length;i++){
            if(count[i]==0){
                perm.add(nums[i]);
                count[i]--;
                permute(nums,count,ans,perm);
                count[i]++;
                perm.remove(perm.size()-1);  // remeber to remove it from here 
            }
        }
    }
